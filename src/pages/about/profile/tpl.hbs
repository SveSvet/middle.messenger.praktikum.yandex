<div class="profile">
  <div class="profile__image-container">
    <button class="profile__image-button">
      <img src={{{userImage}}} alt="user-image" class="profile__image">
    </button>
  </div>
  <div class="profile__info-fields">
    {{{fields}}}
  </div>
  <div class="profile__button-group">
    <div class="profile__button profile__button-group--fields">
      {{{buttonChangeFields}}}
    </div>
    <div class="profile__button profile__button-group--password">
      {{{buttonChangePassword}}}
    </div>
    <div class="profile__button-group--logout">
      {{{buttonLogout}}}
    </div>
  </div>
</div>
