@import "../../styles/constants.pcss";

.text {
  font-family: var(--fontPrimary);
  font-weight: 400;
  line-height: 40px;

  &--size-xxs {
    font-size: var(--FontSize12);
    line-height: 14px;
  }

  &--size-xs {
    font-size: var(--FontSize13);
    line-height: 14px;
  }

  &--size-s {
    font-size: var(--FontSize14);
    line-height: 14px;
  }

  &--size-m {
    font-size: var(--FontSize20);
    line-height: 20px;
  }

  &--bold {
    font-weight: 800;
  }

  &--dark {
    color: var(--dark);
  }

  &--grey {
    color: var(--grey);
  }

  &--blue {
    color: var(--blue);
  }

  &--light {
    color: var(--light);
  }
}
